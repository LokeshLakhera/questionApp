<ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/articles/list">Articles</a></li>
        <li class="breadcrumb-item active">Edit</li>
    </ol>
    <h1 class="display-4">Edit Article</h1>
    <form method="post" action="/question/update/<%= article.id %>">
         <div class="form-group">
                <label for="title">Title</label>
                <input type="questionDescription" name="title" class="form-control"  value="<%= article.questionDescription %>">
            </div>
            <div class="form-group">
                <label for="body">option 1</label>
                <textarea name="option1" class="form-control"  value="<%= article.option1 %>"></textarea>
            </div>
             <div class="form-group">
                <label for="body">option 2</label>
                <textarea name="option2" class="form-control"  value="<%= article.option2 %>"></textarea>
            </div>
             <div class="form-group">
                <label for="body">option 3</label>
                <textarea name="option3" class="form-control"  value="<%= article.option3 %>"></textarea>
            </div>
             <div class="form-group">
                <label for="body">option 4</label>
                <textarea name="option4" class="form-control"  value="<%= article.option4 %>"></textarea>
            </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>
